      $(document).ready(function(){

        // match url re 
        // https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,4}


        console.log(data);
        if( data['hits']['hits'].length != 0 ) {
          $('#tableBody').empty();
          
          var i = 1;
        $('#r-s').html("Result ("+data['hits']['total']['value']+" records found)");

        $.each(data['hits']['hits'],function(index,value){
          console.log(value);
          row = `<tr> <td> ${i} </td>`;
          row += `<td>${value['_source']['title']}</td>`
          row += `<td> <a href="${value['_source']['location']}" target="_blank"> ${value['_source']['location']} </a> </td>` 
          row += `<td>${value['_source']['weblanguage']}</td>` 
          row += `<td>${value['_source']['date_inserted']}</td>` 
          row += `<td>${value['_source']['last_read']}</td>` 
          row += `<td> <button type="button" name="submit" class="btn btn-info btn-sm click-reindex" data-web-id="${value['_id']}" data-location="${value['_source']['location']}" data-weblanguage="${value['_source']['weblanguage']}" data-submitted="${value['_source']['date_inserted']}" title="Recrawl" > <i class="fa fa-refresh"></i> </button> ` 

          row += `<button type="button" name="submit" class="btn btn-danger btn-sm click-delete" data-web-id="${value['_id']}" data-location="${value['_source']['location']}" data-weblanguage="${value['_source']['weblanguage']}" data-submitted="${value['_source']['date_inserted']}" title="Delete"> <i class="fa fa-trash"></i> </button> </td>` 
          
          row += `</tr>`;
          $('#tableBody').append(row);
          i++;
        })
        
        } else {
          $('#tableBody').empty();
          $('#tableBody').append(`<tr> <td colspan="7"> <center> No Website Found </center> </td> </tr>`);
        }   


        const insertWeb = () =>{
        
            let website_url = $('#add_new').val();
            let language = $('#language').val();
              
            let filter = {
              website_url:website_url,
              language:language
            }

            if( website_url == '' || language == '' ) {
              alert('Please! enter/select value.');
              $('#loader-div').hide();
            } else {

              $.ajax({
                  url: '/single/site/add', data:filter,
                  method:'POST', success: result => {

                    // var data = JSON.parse(result);
                    console.log("result yahan par aya ha!");
                    console.log(result);
                    $('#loader-div').hide();
                    if( result == "2" ) {
                      $('#alert-box').addClass('alert-danger');
                      $('#alert-box').html('<center>Sitemap already exists!</center>')
                    }else if( result == "3" ) {
                      $('#alert-box').addClass('alert-danger');
                      $('#alert-box').html('<center>Invalid Sitemap!</center>')
                    } else if( result == "1") {
                      $('#alert-box').addClass('alert-success');
                      $('#alert-box').html('<center>Sitemap Successfully Crawled!</center>')
                    }
                    setTimeout(function(){
                      location.reload();
                    },3000);
                  },
                  error: e => {
                    console.log("");
                    $('#loader-div').hide();
                    $('#alert-box').addClass('alert-danger');
                    $('#alert-box').html('<center>Something went wrong!</center>')
                  }
                });

            }

          }



          $('.click-reindex').click(function(){

            $('#loader-div').show();
            console.log('Reindex web initiated!');

            let singleid = $(this).data('web-id');
            let location = $(this).data('location');
            let weblanguage = $(this).data('weblanguage');
            let submitted = $(this).data('submitted');
              
            let filter = {
              singleid:singleid,
              location:location,
              weblanguage:weblanguage,
              submitted:submitted
            }


              $.ajax({
                  url: 'single/site/reindex', data:filter,
                  method:'POST', success: result => {

                    // var data = JSON.parse(result);
                    console.log("result yahan par aya ha!");
                    console.log(result);
                    $('#loader-div').hide();
                    if( result == "3" ) {
                      $('#alert-box').removeClass('alert-success');
                      $('#alert-box').addClass('alert-danger');
                      $('#alert-box').html('<center>Invalid Sitemap!</center>')
                    } else if( result == "1") {
                      $('#alert-box').removeClass('alert-danger');
                      $('#alert-box').addClass('alert-success');
                      $('#alert-box').html('<center>Website Successfully Reindex/Recrawled!</center>')
                    }
                    setTimeout(function(){
                      location.reload();
                    },2000);
                  },
                  error: e => {
                    console.log("");
                    $('#loader-div').hide();
                    $('#alert-box').addClass('alert-danger');
                    $('#alert-box').html('<center>Something went wrong!</center>')
                  }
                });

            

          });

          $('.click-delete').click(function(){

            $('#loader-div').show();
