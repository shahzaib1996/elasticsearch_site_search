              $.ajax({
                  url: 'url/delete/entry', data:filter,
                  method:'POST', success: result => {

                    // var data = JSON.parse(result);
                    console.log("result");
                    console.log(result);
                    $('#loader-div').hide();
                    if( result == "3" ) {
                      $('#alert-box').removeClass('alert-success');
                      $('#alert-box').addClass('alert-danger');
                      $('#alert-box').html('<center>Invalid Url!</center>')
                    } else if( result == "1") {
                      $('#alert-box').removeClass('alert-danger');
                      $('#alert-box').addClass('alert-success');
                      $('#alert-box').html('<center>Website Successfully Deleted!</center>')
                    }
                    setTimeout(function(){
