                      $('#alert-box').removeClass('alert-success');
                      $('#alert-box').addClass('alert-danger');
                      $('#alert-box').html('<center>Invalid ID!</center>')
                    } else if( result == "1") {
                      $('#alert-box').removeClass('alert-danger');
                      $('#alert-box').addClass('alert-success');
                      $('#alert-box').html('<center>Website Successfully Deleted!</center>')

                    }
                    setTimeout(function(){
                      location.reload();
                    },2000);
                  },
                  error: e => {
                    console.log("");
                    $('#loader-div').hide();
                    $('#alert-box').addClass('alert-danger');
                    $('#alert-box').html('<center>Something went wrong!</center>')
                  }
                });

            

          });


          $('.click-delete-url').click(function(){

            $('#loader-div').show();
            console.log('Delete Url initiated');

            let delete_url = $('#delete_url').val();
              
            let filter = {
