    <div class="container">
      <center>
        <h4> View Website </h4>
      </center>

      <script>
            var status = "<%= status%>";
      </script>

      <div class="alert <%= cc%>">
        <center>
          <script type="text/javascript">
            if(status == "1") {
              document.write("Document has been Saved!");
            }else if(status == "0") {
              document.write("Error Updating document");
            }

          </script>
        </center>
      </div>

      <div class="row"> 
        <div class="col-md-12">
          <div>
            <h4>Edit Website (id: <%= doc_id%>)</h4>
          </div>
          <form class="form" action="/updatewebsite" method="POST" >
            <input type="hidden" name="doc_id" id="doc_id" value="<%= doc_id%>">
            <div class="row" >
              <div class="col-md-12">
                <div class="form-group">
                  <label>Website Name</label>
                  <input type="text" class="form-control" name="website_name" value="<%= wn%>" id="website_name" placeholder="e.g https://www.example.com" required>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label>Language</label>
                  <select class="form-control" name="language" required>
                    <option hidden value="<%= lang%>"><%= lang%></option>
                    <option value="">Select Language</option>
                    <option value="english">English</option>
                    <option value="hindi">Hindi</option>
                    <option value="urdu">Urdu</option>
                    <option value="bengali">Bengali</option>
                  </select>
                </div>
              </div>
              
            </div>
              
            <div class="row">
              
              <div class="col-md-2 ">
                <input type="submit" class="btn btn-success" name="submit" value="Update" style="width: 100%;">
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
    




