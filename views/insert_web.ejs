    <div class="container">
      <center>
        <h4> Add New Website </h4>
      </center>

      <script>
            var status = "<%= status%>";
      </script>

      <div class="alert <%= cc%>">
        <center>
          <script type="text/javascript">
            if(status == "1") {
              document.write("Document has been Saved!");
            }else if(status == "0") {
              document.write("Error Saving document");
            }

          </script>
        </center>
      </div>

      <div class="row"> 
        <div class="col-md-12">
          <form class="form" action="/insertweb" method="POST" onsubmit="return checkURL();">
            <div class="row" >
              <div class="col-md-12">
                <div class="form-group">
                  <label>Website Name</label>
                  <input type="text" class="form-control" name="website_name" id="website_name" placeholder="e.g https://www.example.com" required>
                </div>
              </div>
              <div class="col-md-12">
                <div class="form-group">
                  <label>Language</label>
                  <select class="form-control" name="language" required>
                    <option value="">Select Language</option>
                    <option value="english">English</option>
                    <option value="hindi">Hindi</option>
                    <option value="urdu">Urdu</option>
                    <option value="bengali">Bengali</option>
                  </select>
                </div>
              </div>
              
            </div>
              
            <div class="row">
              <div class="col-md-2 ">
                <input type="submit" class="btn btn-success" name="submit" value="Add" style="width: 100%;">
              </div>
            </div>
          </form>
        </div>
      </div>

      <br><br>
      <div class="table-div">
        <h1> <center> Websites </center> </h1>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <td>Sno</td>
              <td>Website Name</td>
              <td>Language</td>
              <td width="300">Action</td>
            </tr>
          </thead>
          <tbody id="tableBody">
              
              

          </tbody>
        </table>
      </div>



    </div>

    <script type="text/javascript">
      data = {};
      data = <%- JSON.stringify(websites) %>;
    </script>

