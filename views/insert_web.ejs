        // var wn_check = wn.match(url_re);

        var expression = /https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{2,256}\.[a-z]{2,4}/g;
        var regex = new RegExp(expression);
        var t = 'www.google.com';

